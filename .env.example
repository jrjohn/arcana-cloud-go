# Application
ARCANA_APP_NAME=arcana-cloud-go
ARCANA_APP_VERSION=1.0.0
ARCANA_APP_ENVIRONMENT=development
ARCANA_APP_DEBUG=true

# HTTP Server
ARCANA_SERVER_HOST=0.0.0.0
ARCANA_SERVER_PORT=8080

# gRPC Server
ARCANA_GRPC_HOST=0.0.0.0
ARCANA_GRPC_PORT=9090
ARCANA_GRPC_TLS_ENABLED=false

# Database
ARCANA_DATABASE_DRIVER=mysql
ARCANA_DATABASE_HOST=localhost
ARCANA_DATABASE_PORT=3306
ARCANA_DATABASE_NAME=arcana_cloud
ARCANA_DATABASE_USER=root
ARCANA_DATABASE_PASSWORD=

# Redis
ARCANA_REDIS_HOST=localhost
ARCANA_REDIS_PORT=6379
ARCANA_REDIS_PASSWORD=

# JWT
JWT_SECRET=your-super-secret-key-change-in-production
ARCANA_JWT_ACCESS_TOKEN_DURATION=1h
ARCANA_JWT_REFRESH_TOKEN_DURATION=720h

# Deployment
ARCANA_DEPLOYMENT_MODE=monolithic
ARCANA_DEPLOYMENT_LAYER=
ARCANA_DEPLOYMENT_PROTOCOL=grpc

# Plugin
ARCANA_PLUGIN_ENABLED=true
ARCANA_PLUGIN_PLUGINS_DIRECTORY=./plugins
ARCANA_PLUGIN_AUTO_LOAD=true
ARCANA_PLUGIN_HOT_RELOAD=true

# SSR
ARCANA_SSR_ENABLED=true
ARCANA_SSR_CACHE_ENABLED=true
ARCANA_SSR_CACHE_TTL=3600
